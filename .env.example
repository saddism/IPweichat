# WeChat Bot Configuration Example
# Rename this file to .env and fill in your values

# Claude API Configuration
CLAUDE_API_URL=https://api.anthropic.com/v1
CLAUDE_API_KEY=your_claude_api_key_here

# Bot Configuration
BOT_NAME=Crystal
DEBUG=true
LOG_LEVEL=info

# Room Configuration
# Comma-separated list of room names to monitor
WEBROOM=room1,room2,room3

# User Configuration
# Your WeChat name for special privileges
MYSELF=your_wechat_name
# Comma-separated list of ignored users
IGNORE=user1,user2

# Weather API Configuration
WEATHER_KEY=your_weather_api_key

# OpenAI Configuration (Optional)
OPENAI_API_KEY=your_openai_api_key_here
CHATGPT_TRIGGER_KEYWORD=your_trigger_word
